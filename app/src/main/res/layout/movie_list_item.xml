<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_movie_grid_poster"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/movie_list_item_poster_description"
        android:layout_width="@dimen/MoviePosterWidth"
        android:layout_height="@dimen/MoviePosterHeight" />

    <View
        android:background="@android:color/darker_gray"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <TextView
        android:id="@+id/tv_movie_grid_title"
        android:layout_margin="20dp"
        android:textSize="16sp"
        android:text="Default Text"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>